<!-- Conditionally render create a comment box -->

<div class="row mb-4 project">
  <h2 class="headbar">Leave a Comment!</h2>

  {{#if logged_in}}
  <form class="form new-comment-form">
    <div class="form-group">
      <textarea class="form-input" id="comment-desc" name="comment-desc"></textarea>
    </div>

    <div class="form-group">
      <button id="createNewComment" button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>
  {{else}}
  <p class="headbar">To leave a comment, please sign up and/or log into your account</p>
  {{/if}}

  <!-- js script -->

  <script src="/js/leave-comment.js"></script>