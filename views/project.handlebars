<div class="row mb-4 project">
  <h2 class="headbar">
    {{name}}
    <span class="creator" style="float:right">Created by {{user.name}} on {{format_date date_created}}</p></span>
  </h2>
  <p class="headbar">{{description}}</p>

</div>


<!-- display comments -->
{{#each comments as |comment|}}
<div class="card">
  <div class="card-header">
  </div>
  <p class="headbar">{{comment.text}} <br> &mdash; {{user.name}} on {{format_date date_created}} </p>
</div>
{{/each}}

</div>

